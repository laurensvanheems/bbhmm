<!doctype html>
<html>
<head>
  <% include ../partials/head %>
</head>
<body ng-app="bbhmmApp">

  <section class="bbhmm__background">
    <figure class="bbhmm__riri"></figure>
    <figure class="bbhmm__bitch"></figure>
  </section>

  <header class="bbhmm__header" bbhmm-header>
    <hgroup class="bbhmm__header__titles">
      <h1>Bitch better have my money</h1>
      <h2>Let that bitch know</h2>
    </hgroup>
    <figure class="bbhmm__scroll"></figure>
  </header>

  <section class="bbhmm__body">

    <section bbhmm-form>
      <form>
        <ul class="bbhmm__list">
          <li class="bbhmm__list__item">
            <label for="bitch">Your Name</label>
            <input
              type="text"
              placeholder="Rihanna"
              ng-model="name" />
          </li>
          <li class="bbhmm__list__item">
            <label for="bitch">The Bitch</label>
            <input
              type="text"
              placeholder="Kendall (venmo username)"
              ng-model="bitch"
              ng-keyup="constructVenmo(bitch, 'recipients')" />
          </li>

          <li class="bbhmm__list__item">
            <label for="bitch">The Money</label>
            <input
              type="number"
              placeholder="100"
              ng-model="money"
              ng-keyup="constructVenmo(money, 'amount')" />
          </li>

          <li class="bbhmm__list__item">
            <label for="bitch">The Message</label>
            <input
              type="text"
              placeholder="Donâ€™t act like you forgot"
              ng-model="note"
              ng-keyup="constructVenmo(note, 'note')" />
          </li>

        </ul>
      </form>
      <a
        href="{{venmoUrl}}"
        target="_blank"
        title="Charge that bitch on Venmo"
        class="bbhmm__venmo"
        ng-show="showVenmo">
        Charge on Venmo
      </a>
    </section>
  </section>

  <% include ../partials/scripts %>

</body>
</html>
